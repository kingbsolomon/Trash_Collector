@model Trash_Collector.Models.Customer

@{
    ViewData["Title"] = "ChangeWeeklyPickup";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var selectList = new SelectList(
        new List<SelectListItem>
        {
            new SelectListItem {Text = "Sunday", Value = "Sunday"},
            new SelectListItem {Text = "Monday", Value = "Monday"},
            new SelectListItem {Text = "Tuesday", Value = "Tuesday"},
            new SelectListItem {Text = "Wednesday", Value = "Wednesday"},
            new SelectListItem {Text = "Thursday", Value = "Thursday"},
            new SelectListItem {Text = "Friday", Value = "Friday"},
            new SelectListItem {Text = "Saturday", Value = "Saturday"},
                    }, "Value", "Text");
}

<h1>Change Weekly Pickup Day</h1>

<h4>@Model.FirstName @Model.LastName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangeWeeklyPickup">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DayWeek" class="control-label"></label>
                <select asp-for="DayWeek" class="form-control" asp-items="selectList"></select>
                <span asp-validation-for="DayWeek" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
